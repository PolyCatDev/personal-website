---
interface Props {
    motto: string;
}

const { motto } = Astro.props;
---

<header class="bg-background-500 font-bold p-8 m-5 rounded-xl">
    <h1 class="text-4xl text-center p-1"><slot /></h1>
    <h3 class="text-2xl text-center">{motto}</h3>

    <nav class="flex justify-center pt-1">
        <ul class="flex flex-wrap justify-center space-x-2 font-normal text-foreground-300">
            <li><a href="/">Home</a></li>
            <li><a href="/gif-collection">Gif Collection</a></li>
            <li><a href="/guestbook">Guestbook</a></li>
            <li><a href="https://blog.jellycat.cafe">Blog</a></li>
            <li><a href="/links">Links</a></li>
        </ul>
    </nav>
</header>

<style>
    a:hover {
        text-decoration-line: underline;
    }
</style>
