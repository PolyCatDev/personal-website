---
interface Props {
    title: string;
    description: string;
}

const { title = "changeme", description = "changeme" } = Astro.props;

import "../../tailwind.css"
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title}</title>
    </head>
    <body class="bg-jelly-background">
        <slot />
    </body>
</html>
